<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkBrown</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorOrange</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationInApp</item>
    </style>

    <!--style for animation for activity-->
    <style name="windowAnimationInApp" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/trans_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/trans_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/trans_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/trans_right_out</item>
    </style>

    <!--Style for all common for all Dialog Text-->
    <style name="commonDialogText">
        <item name="android:textColor">@color/colorLightBlack</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <!--This is common for all Dialog Button's-->
    <style name="commonButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:background">@drawable/rounded_corner_coloraccent</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <!--Style for all TextView for Corner background-->
    <style name="commonTextHeader">
        <item name="android:textColor">@color/colorHeaders</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp_15</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="commonHintColor">
        <item name="android:textColorHint">@color/colorEditTextHint</item>
    </style>
    <!--Style for all EditText-->
    <style name="commonEditText">
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginBottom">@dimen/dp_15</item>
        <item name="android:paddingBottom">@dimen/dp_20</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:drawablePadding">@dimen/dp_15</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="commonTextViewStyle">
        <item name="android:textColor">#a2a2a2</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="android:layout_marginLeft">@dimen/dp_3</item>
        <item name="android:layout_marginRight">@dimen/dp_3</item>
    </style>

    <!--Style for Home Activity TextView-->
    <style name="commonHomeText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/dp_15</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/dp_15</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="android:drawableRight">@drawable/black_next_arrow</item>
    </style>

    <!--Style for Filter TextView-->
    <style name="commonFilerTextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/filter_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <!--Style for Recycler Title-->
    <style name="recyclerTextViewTitle">
        <item name="android:textColor">@color/colorDarkBrown</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <!--Style for recycler content that are in app Accent color -->
    <style name="recyclerTextViewcolorAccent">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="commonTabText" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CommonCustomTabStyle</item>
        <item name="tabIndicatorColor">@color/colorTabText</item>
    </style>

    <style name="CommonCustomTabStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CalenderDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorOrange</item>
    </style>

    <style name="CropTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorOrange</item>
    </style>

    <style name="commonsettingLinearLayout">
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorOrange</item>
        <item name="android:textColorPrimary">@color/colorOrange</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="commonDateTextView">
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
        <item name="android:textColor">@color/colorDateLightGrey</item>
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="commonRecyclerContent">
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:layout_marginRight">@dimen/dp_5</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
        <item name="android:textColor">@color/colorRecyclerContent</item>
    </style>

    <style name="CommonCheckBox">
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:drawableLeft">@drawable/checkbox_background</item>
        <item name="android:drawablePadding">@dimen/dp_12</item>
        <item name="android:button">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorAppGray</item>
    </style>
    <!--color_ques_text-->
    <style name="CommonRadioButton">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:drawableLeft">@drawable/radio_background</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorAppGray</item>
    </style>

    <!--Alert Dialog-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
