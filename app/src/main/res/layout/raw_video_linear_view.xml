<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewVideoLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="@dimen/dp_4"
        card_view:cardElevation="@dimen/dp_2"
        card_view:cardMaxElevation="@dimen/dp_3"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    card_view:cardBackgroundColor="@color/colorWhite"
                    card_view:cardCornerRadius="@dimen/dp_4"
                    card_view:cardElevation="@dimen/dp_2"
                    card_view:cardMaxElevation="@dimen/dp_3"
                    card_view:cardUseCompatPadding="true">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdvmediaPreview"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:clickable="false"
                        android:scaleType="fitXY" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/VideoPreviewPlayButton"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal|center"
                        android:clickable="false"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/img_play" />

                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_3">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txt_title"
                        style="@style/recyclerTextViewTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/the_electric_gate_shop" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txt_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_title"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/the_electric_gate_shop"
                        android:textColor="@color/cardview_shadow_start_color" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txt_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_date"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:maxLines="4"
                        android:paddingRight="@dimen/dp_5"
                        android:textSize="@dimen/sp_18" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_20">

                <!--<android.support.v7.widget.AppCompatTextView-->
                <!--android:id="@+id/txt_author"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="@dimen/dp_2"-->
                <!--android:fontFamily="@font/lato_regular"-->
                <!--android:singleLine="true"-->
                <!--android:text="@string/lifting_safety"-->
                <!--android:textColor="@color/colorOrange"-->
                <!--android:textSize="@dimen/sp_15" />-->

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imgYoutubeLink"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="start"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="@dimen/dp_2"
                    android:src="@drawable/youtube_image" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imgShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="@dimen/dp_12"
                    android:src="@drawable/img_share" />
            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>