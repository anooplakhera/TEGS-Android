<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lnr_view_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rel_ques_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_2">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txt_question_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_grey_radius_8"
                    android:fontFamily="@font/lato_bold"
                    android:paddingBottom="@dimen/dp_7"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_7"
                    android:text="@string/question"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_ques_edit"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@+id/txt_question_no"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/img_edit" />
            </RelativeLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_question_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_25"
                android:fontFamily="@font/lato_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_18" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="@font/lato_bold"
                android:text="@string/answer"
                android:textColor="@color/colorDateLightGrey"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:id="@+id/lnr_answer_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/ques_divider_color" />
    </LinearLayout>
</layout>